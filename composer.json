{
    "name": "rashidsiavoshi/verta",
    "description": "This Package helps developers to work with Jalali Datetime class for Laravel Framework PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "rashid siavoshi",
            "email": "rashidsiavoshi@gmail.com"
        }
    ],
    "keywords": ["Laravel","Date","Datetime","Jalali", "Shamsi", "Verta"],
    "require": {
        "php": "^7.2.5",
        "rashidsiavoshi/notowo": "^1.0",
        "illuminate/validation": "^5|^6|^7|^8",
        "illuminate/support": "^5|^6|^7|^8"
    },
    "require-dev" : {
        "phpunit/phpunit": "7.2.*",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Rashidsiavoshi\\Verta\\": "src"
        },
        "files": [
          "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Rashidsiavoshi\\VertaTests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "laravel": {
            "providers": [
                "Rashidsiavoshi\\Verta\\VertaServiceProvider"
            ],
            "aliases": {
                "Verta": "Rashidsiavoshi\\Verta\\Verta"
            }
        }
    }
}
